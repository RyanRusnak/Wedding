<h1>Listing participants</h1>
<div id= "wrapper">
	
<ul class="partyPicGroom">
<%  @participants.each do |participant| %>
  <li>
	<figure>
    <%= link_to (image_tag participant.picture), participant %>
    <%= participant.name %></br><%= participant.title %>
	<figure>
  </li>
<% break if participant.id > 10; %>

<% end %>
</ul>


<ul class="partyPicBride">
<%  Participant.find_each(:start =>10) do |participant| %>
 <li>
  <figure>
    <img src=<%= participant.picture %>>
    <%= participant.name %></br><%= participant.title %>
  <figure>
	</li>
<% end %>
</ul>

</div>